# Exchange Configuration
EXCHANGE=deribit  # Options: deribit, coinbase
ENVIRONMENT=testnet  # Options: testnet, production

# Deribit API Keys (testnet)
DERIBIT_TESTNET_API_KEY=your_deribit_testnet_key
DERIBIT_TESTNET_SECRET=your_deribit_testnet_secret

# Deribit API Keys (production) - for future use
DERIBIT_API_KEY=your_deribit_production_key
DERIBIT_SECRET=your_deribit_production_secret

# Coinbase API Keys (for future production use)
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET=your_coinbase_secret

# AI Model Configuration
AI_MODEL=claude  # Options: claude, openai
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Trading Configuration
INITIAL_BALANCE=10000.00
SYMBOLS=BTC-PERPETUAL,ETH-PERPETUAL,SOL-PERPETUAL,BNB-PERPETUAL,XRP-PERPETUAL,DOGE-PERPETUAL
DEFAULT_LEVERAGE=20
MAX_POSITION_SIZE_PCT=25  # Max % of account per position
MAX_SIMULTANEOUS_POSITIONS=3

# Bot Settings
RUN_INTERVAL_MINUTES=3
ENABLE_TRADING=true  # Set to false for dry-run mode

# Risk Management
MAX_DRAWDOWN_PCT=20  # Stop trading if drawdown exceeds this
POSITION_SIZE_PCT=20  # Default position size as % of account

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/trading_bot.log
